//Create a program that will “count” numbers, separated by commas, up to 10. When it
// reaches 10, count by 2s until you reach 30.

#include <iostream>
#include <cmath>
#include <conio.h>

using namespace std; 

int main ()
{
	int x;
	x =1;
	
	cout << "Counting from 0 - 30..." << endl;
	cout << "\n";
	
	for (int i = 1; i <=20; i++)
		{
			if (x < 10)
			{
			cout << x++ << ", ";
			}
			else 
			{
			cout << " " << x << ", ";
			x= x + 2;
			}			
	}
	_getch ();
	return 0;
}
