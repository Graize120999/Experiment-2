// Create a program that will draw a box using “*” characters given its dimensions in rows and columns.

#include <iostream>
#include <cmath>
#include <conio.h>

using namespace std; 

int main ()
{
	int row, col;
	
	cout << "LET US DRAW A BOX!\n" << endl;
		
	cout << "How Many Rows Do You Want: ";
	cin >> row;
  
	cout  << "How Many Columns Do You Want: ";
	cin >> col;
	cout << "\n\n";
  
	cout << "Now, you have a box with " << row << " rows & " << col << " columns.\n\n"; 
	
	for (int i = 0; i<row; i++)
	{
		for (int j = 0; j<col; j++)
		{
			cout << "*";
		}
		cout << "\n";
	}

	_getch ();
	return 0;
  }
