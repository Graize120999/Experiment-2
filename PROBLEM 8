// Create a program that will generate the multiplication table (up to x10) of a number.

#include <iostream>
#include <cmath>
#include <conio.h>

using namespace std; 

int main ()
{
	int a;
		cout << "Enter a number from 1 - 10: ";
		cin >> a; 
		
		cout << "\n";
		
		if (a == 1)
		 	cout << " 1*1 = 1\n 1*2 = 2\n 1*3 = 3\n 1*4 = 4\n 1*5 = 5\n 1*6 = 6\n 1*7 = 7\n 1*8 = 8\n 1*9 = 9\n 1*10 = 10" << endl; 
		else if (a == 2)
		 	cout << " 1*2 = 2\n 2*2 = 4\n 2*3 = 6\n 2*4 = 8\n 2*5 = 10\n 2*6 = 12\n 2*7 = 14\n 2*8 = 16\n 2*9 = 18\n 2*10 = 20" << endl; 
		else if (a == 3)
		 	cout << " 3*1 = 3\n 3*2 = 6\n 3*3 = 9\n 3*4 = 12\n 3*5 = 15\n 3*6 = 18\n 3*7 = 21\n 3*8 = 24\n 3*9 = 27\n 3*10 = 30" << endl; 
		else if (a == 4)
		 	cout << " 4*1 = 4\n 4*2 = 8\n 4*3 = 12\n 4*4 = 16\n 4*5 = 20\n 4*6 = 24\n 4*7 = 28\n 4*8 = 32\n 4*9 = 36\n 4*10 = 40" << endl; 
		else if (a == 5)
		 	cout << " 5*1 = 5\n 5*2 = 10\n 5*3 = 15\n 5*4 = 20\n 5*5 = 25\n 5*6 = 30\n 5*7 = 35\n 5*8 = 40\n 5*9 = 45\n 5*10 = 50" << endl; 
		else if (a == 6)
		 	cout << " 6*1 = 6\n 6*2 = 12\n 6*3 = 18\n 6*4 = 24\n 6*5 = 30\n 6*6 = 36\n 6*7 = 42\n 6*8 = 48\n 6*9 = 52\n 6*10 = 60" << endl; 
		else if (a == 7)
		 	cout << " 7*1 = 7\n 7*2 = 14\n 7*3 = 21\n 7*4 = 28\n 7*5 = 35\n 7*6 = 42\n 7*7 = 49\n 7*8 = 56\n 7*9 = 63\n 7*10 = 70" << endl; 
		else if (a == 8)
		 	cout << " 8*1 = 8\n 8*2 = 16\n 8*3 = 24\n 8*4 = 32\n 8*5 = 40\n 8*6 = 48\n 8*7 = 56\n 8*8 = 64\n 8*9 = 72\n 8*10 = 80" << endl; 
		else if (a == 9)
		 	cout << " 9*1 = 9\n 9*2 = 18\n 9*3 = 27\n 9*4 = 36\n 9*5 = 45\n 9*6 = 54\n 9*7 = 63\n 9*8 = 72\n 8*9 = 81\n 9*10 = 90" << endl; 
		else if (a == 10)
		 	cout << " 10*1 = 10\n 10*2 = 20\n 10*3 = 30\n 10*4 = 40\n 10*5 = 50\n 10*6 = 60\n 10*7 = 70\n 10*8 = 80\n 10*9 = 90\n 10*10 = 100" << endl; 
		else 
			cout << "THE NUMBER YOU HAVE ENTERED IS STILL IN VALID...\nPlease try again";
		 	
	_getch ();
	return 0;
}
